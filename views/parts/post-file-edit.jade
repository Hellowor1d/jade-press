.form-group

	label
		|content( jade(pug) template
		a(href='http://jade-lang.com/', target='_blank', title='what is jade(pug)')
			span.icon-help-circled
		|)

	.files-control3

		#file-err3

		.card.bg-info.card-inverse.card-warning(v-show='formData3.featuredFile._id')
			.card-block 
				.small
					|{{formData3.featuredFile._id}}.{{formData3.featuredFile.ext}}
					span.label.label-default featured
					a.pull-xs-right.text-muted(title='unset featured file', href='#', @click.prevent='unsetFeatured(formData3)')
						i.icon-cancel-circled
				.img(v-if='isImg(formData3.featuredFile)')
					a(:href='createImgSrc(formData3.featuredFile)', target='_blank')
						img(:src='createImgSrc(formData3.featuredFile)', alt='formData3.featuredFile.filename', height=30)

		ul.nav.nav-tabs
			li.nav-item.m-l-1
				a.nav-link(href='#file-upload', @click.prevent='setFileTab("file-upload")', :class='{ "active": fileTab === "file-upload" }')
					|upload file
					span.text-danger ({{formData3.files.length}})
			li.nav-item
				a.nav-link(href='#file-list', @click.prevent='setFileTab("file-list")', :class='{ "active": fileTab === "file-list" }')
					|select file
					span.text-danger ({{filesTotal}})

		.tab-contents.p-y-1
			.tab-content(v-show='fileTab === "file-upload"')

				p
					label.file
						input(type='file', id='file3', multiple)
						span.file-custom
					span.label.label-success(v-show='uploadProgress > 0 && uploadProgress < 100') {{uploadProgress}}/100

				ul.list-group.files-list1
					li.list-group-item(v-for='f in formData3.files')
						.small

							|{{f._id}}.{{f.ext}}

							span.label.label-default(v-show='f._id === formData3.featuredFile._id') featured

							a.m-x-1(href='#', @click.prevent='remove(f, formData3.files)')
								i.icon-cancel-circled
								span delete

							a.m-x-1(href='#', @click.prevent='insertFile(f, "formData3")')
								span insert

							a.m-x-1(href='#', @click.prevent='setAsFeatured(f, formData3)')
								i.icon-paper-plane
								span set as featured

						.img(v-if='isImg(f)')
							a(:href='createImgSrc(f)', target='_blank')
								img(:src='createImgSrc(f)', alt='f.filename', height=30)

			.tab-content(v-show='fileTab === "file-list"')
				#msgf3
				.form-group
					.input-group
						input.form-control(type='text', v-model='formDataf.name', @change='getFiles()', debounce=500)
						span.input-group-btn
							button.btn.btn-secondary(type='button', @click='getFiles()')
								span(v-show='!onloadFiles') search
								span(v-show='onloadFiles') loading...

				div(v-show='filesTotal > formDataf.pageSize')
					zpagenav(:page.sync='formDataf.page', :page-size='formDataf.pageSize', :total='filesTotal', :max-link='formDataf.maxLink')

				ul.list-group.files-list2
					li.list-group-item(v-for='f in files')
						.small

							|{{f._id}}.{{f.ext}}

							span.label.label-default(v-show='f._id === formData3.featuredFile._id') featured

							a.m-x-1(href='#', @click.prevent='insertFile(f, "formData3")')
								span insert

							a.m-x-1(href='#', @click.prevent='setAsFeatured(f, formData3)')
								i.icon-paper-plane
								span set as featured

						.img(v-if='isImg(f)')
							a(:href='createImgSrc(f)', target='_blank')
								img(:src='createImgSrc(f)', alt='f.filename', height=30)

				div(v-show='filesTotal > formDataf.pageSize')
					zpagenav(:page.sync='formDataf.page', :page-size='formDataf.pageSize', :total='filesTotal', :max-link='formDataf.maxLink')

	div(name='content', v-form-ctrl='formData3.content', maxlength=10000)
			jadeeditor(:content.sync='formData3.content', :rows='rows', :id='editor3')
	div(v-show='form3.content.$dirty && form3.content.$invalid')
		.alert.alert-danger(v-show='form3.content.$error.maxlength') more than 10000 chars